.form-cell_title {
  margin-bottom: 10px;
  font-size: medium;
}

.form-cell_title-placeholder {
  font-size: small;
  color: lightgray;
}

.upload-text {
  margin-left: auto;
  opacity: 0.5;
}

.upload {
  width: 15px;
  height: 15px;
  margin-left: 10px;
}

.option {
  margin-left: 15vw;
}

.selector {
  width: 15px;
  height: 15px;
  margin-left: auto;
}

.footer {
  width: 100%;
  height: 10vh;
  position: fixed;
  bottom: 0;
  display: flex;
  border-top: lightgray solid 1px;
}

.footer view {
  width: 50%;
  height: 100%;
  padding-top: 2vh;
  text-align: center;
}

.reset {
  background: white;
}

.save {
  color: white;
  background: #353535;
}

.form-cell_input {
  width: 100%; /* 设置宽度为100%，以占据整个单元格的宽度 */
  min-height: 500rpx; /* 设置最小高度，根据需要调整 */
  overflow-y: auto; /* 如果内容超出高度，则显示滚动条 */
  word-wrap: break-word; /* 允许长单词或URL自动换行 */
  white-space: pre-wrap; /* 保留空白，并且自动换行 */
}

/* 为了确保输入框能够适应更大的内容，可能需要调整父容器的样式 */
.form-cell {
  flex-grow: 1; /* 允许单元格扩展以填充额外的空间 */
}

/* 确保容器有足够的空间来显示更大的输入框 */
.container {
  padding: 20rpx; /* 增加内边距，以便有更多的空间来显示内容 */
}

/* 其他相关样式调整 */
.form-group {
  margin-bottom: 20rpx; /* 增加组之间的间距 */
}
